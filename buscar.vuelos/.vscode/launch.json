    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "justMyCode":  false,
            "env": {
                "POOL_SIZE":   "5"   ,
                "MAX_OVERFLOW":  "10"   ,
                "POOL_RECYCLE":  "120"  ,
            },
            "args": [
                "main:app",
                "--reload",
                "--port",
                "8086"
            ]
        }
    ]
}